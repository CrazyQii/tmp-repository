<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.example.studentauth.dao.PersonInfoDao">
    <resultMap type="com.example.studentauth.entity.PersonInfo" id="personMap">
        <id column="user_id" property="userId"/>
        <result column="user_name" property="userName"/>
        <result column="teacher_name" property="teacherName"/>
        <result column="email" property="email"/>
        <result column="gender" property="gender"/>
        <result column="enabke_status" property="enabkeStatus"/>
        <result column="user_type" property="userType"/>
        <result column="user_password" property="userPassword"/>
        <result column="create_time" property="createTime"/>
        <result column="last_edit_time" property="lastEditTime"/>
    </resultMap>
    <select id="findLogin" resultType="com.example.studentauth.entity.PersonInfo" parameterType="String">
        SELECT
        user_id,
        user_name,
        teacher_name,
        email,
        gender,
        enabke_status,
        user_type,
        user_password,
        last_edit_time
        FROM
        tb_person_info
        WHERE
        user_name=#{userName}
    </select>
    <select id="queryByPersonInfoId" resultType="com.example.studentauth.entity.PersonInfo">
        SELECT
        user_id,
        user_name,
        teacher_name,
        email,
        gender,
        enabke_status,
        user_type,
        user_password,
        last_edit_time
        FROM
        tb_person_info
        WHERE
        user_id=#{userId}
    </select>
    <insert id="insertPersonInfo">
        insert into
        tb_person_info(user_id,user_name,teacher_name,email,gender,enabke_status,user_type,user_password,create_time,last_edit_time)
        VALUES
        (#{userId},#{userName},#{teacherName},#{email},#{gender},#{enabkeStatus},#{userType},#{userPassword},#{createTime},#{lastEditTime})
    </insert>
    <update id="updatePersonInfo" parameterType="com.example.studentauth.entity.PersonInfo">
        update tb_person_info
        <set>
            <if test="userName!=null">user_name=#{userName},</if>
            <if test="teacherName!=null">teacher_name=#{teacherName},</if>
            <if test="email!=null">email=#{email},</if>
            <if test="gender!=null">gender=#{gender},</if>
            <if test="enabkeStatus!=null">enabke_status=#{enabkeStatus},</if>
            <if test="userType!=null">user_type=#{userType},</if>
            <if test="userPassword!=null">user_password=#{userPassword},</if>
            <if test="lastEditTime!=null">last_edit_time=#{lastEditTime}</if>
        </set>
        where user_id=#{userId}
    </update>
    <delete id="deletePersonInfo">
        DELETE FROM
        tb_person_info
        WHERE
        user_id=#{userId}
    </delete>
    <select id="queryPersonInfoList" resultMap="personMap">
        SELECT * FROM tb_person_info
        ORDER BY
        user_id DESC
        LIMIT #{rowIndex},#{pageSize};
    </select>
    <select id="queryPersonCount" resultType="int">
        SELECT
        count(1)
        FROM
        tb_person_info
    </select>
</mapper>